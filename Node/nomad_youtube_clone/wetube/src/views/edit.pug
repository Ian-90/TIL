extends base.pug

block content
  h4 Update Video
  form(method="POST")
    input(name="title", placeholder="Video Title", value=video.title, requried)
    input(name="description" ,placeholder="Description", value=video.description, requried, type="text", minLength=20)
    input(name="hashtags" ,placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), requried, type="text")
    input(value="Save", type="submit")
  