extends base.pug

block content
  div.upload__container
    div.upload__video
      video#preview
      button#actionBtn Start Recording
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file", accept="video/*", requried, id="video", name="video")
    label(for="thumb") Thumbnail File
    input(type="file", accept="image/*", requried, id="thumb", name="thumb")
    input(name="title" ,placeholder="Title", requried, type="text", maxLength=80)
    input(name="description" ,placeholder="Description", requried, type="text", minLength=2)
    input(name="hashtags" ,placeholder="Hashtags, separated by comma.", requried, type="text")
    input(value="Upload Video", type="submit")
  
block scripts
  script(src='/static/js/recorder.js')
