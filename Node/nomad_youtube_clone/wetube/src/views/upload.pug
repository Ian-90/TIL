extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file", accept="video/*", requried, id="video", name="video")
    input(name="title" ,placeholder="Title", requried, type="text", maxLength=80)
    input(name="description" ,placeholder="Description", requried, type="text", minLength=20)
    input(name="hashtags" ,placeholder="Hashtags, separated by comma.", requried, type="text")
    input(value="Upload Video", type="submit")